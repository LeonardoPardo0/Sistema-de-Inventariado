# ======================================================
# CONFIGURACIÓN GLOBAL - PROYECTO MICROSERVICIOS
# ======================================================

# MongoDB - Credenciales globales
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin123

# Mongo Express - Panel web de administración
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASS=admin123

# JWT - Autenticación
JWT_SECRET=supersecreto
JWT_EXPIRES_IN=1h

# ======================================================
# PUERTOS DE SERVICIOS
# ======================================================

# API Gateway
GATEWAY_PORT=80

# Frontend
FRONTEND_PORT=8081

# Auth Service
